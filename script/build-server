#!/usr/bin/env bash

java -version
script/update-project.clj
cd server
lein with-profiles -user do clean, run -m clj-kondo.lsp-server.impl.version
lein with-profiles -user do clean, uberjar
cd target
for filename in *standalone.jar;
do cp "$filename" "clj-kondo-$filename";
done
cd ..
cp target/lsp-*-standalone.jar ../vscode-extension/clj-kondo.lsp-standalone.jar
